{
  "name": "vendor/dealtonbut",
  "description": "SAE BUT2 S1 - Fictitious Marketplace.",
  "license": "proprietary",
  "authors": [
    {
      "name": "Kiko",
      "email": "francisco.etude@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpdocumentor/phpdocumentor": "^3.0",
    "phpunit/phpunit": "^10.5"
  },
  "require": {
    "php": ">=8.3.6",
    "ext-pdo": "*",
    "phpmailer/phpmailer": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "DealTonBut\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/flex": true,
      "phpstan/phpstan": true,
      "phpdocumentor/phpdocumentor": true
    },
    "process-timeout": 600
  },
  "scripts": {
    "phpstan": "phpstan analyse --memory-limit=512M",
    "phpstan-baseline": "phpstan analyse --memory-limit=512M --generate-baseline"
  }
}
